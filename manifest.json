{
  "manifest_version": 3,
  "name": "Product Analyzer Pro",
  "version": "1.0.0",
  "description": "Analyze products on merchant sites using AI-powered insights",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.amazon.in/*",
    "https://generativelanguage.googleapis.com/*",
    "https://cloud.langfuse.com/*",
    "https://*.langfuse.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Product Analyzer Pro"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
